<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="
        http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.23.xsd">

    <!-- ===================================================== -->
    <!-- Tabla: rol -->
    <!-- ===================================================== -->

    <changeSet id="rol-001-create-table" author="system">
        <createTable tableName="rol">
            <column name="id" type="SERIAL">
                <constraints primaryKey="true" nullable="false"/>
            </column>

            <column name="nombre" type="VARCHAR(200)" defaultValue="">
                <constraints nullable="false"/>
            </column>

            <column name="descripcion" type="TEXT"/>

            <column name="is_deleted" type="BOOLEAN" defaultValueBoolean="false">
                <constraints nullable="false"/>
            </column>

            <column name="createdby_id" type="INTEGER">
                <constraints nullable="false"/>
            </column>

            <column name="updatedby_id" type="INTEGER">
                <constraints nullable="false"/>
            </column>

            <column name="createdat" type="TIMESTAMP"/>
            <column name="updatedat" type="TIMESTAMP"/>
        </createTable>
    </changeSet>

    <!-- ===================================================== -->
    <!-- Ãndices -->
    <!-- ===================================================== -->

    <changeSet id="rol-002-index-is-deleted" author="system">
        <createIndex indexName="idx_rol_is_deleted" tableName="rol">
            <column name="is_deleted"/>
        </createIndex>
    </changeSet>

    <!-- ===================================================== -->
    <!-- Foreign Keys -->
    <!-- ===================================================== -->

    <changeSet id="rol-003-fk-createdby" author="system">
        <addForeignKeyConstraint
            baseTableName="rol"
            baseColumnNames="createdby_id"
            referencedTableName="user"
            referencedColumnNames="id"
            constraintName="fk_rol_createdby"/>
    </changeSet>

    <changeSet id="rol-004-fk-updatedby" author="system">
        <addForeignKeyConstraint
            baseTableName="rol"
            baseColumnNames="updatedby_id"
            referencedTableName="user"
            referencedColumnNames="id"
            constraintName="fk_rol_updatedby"/>
    </changeSet>

</databaseChangeLog>
