    <changeSet id="moneda-pyg" author="orco">
        <insert tableName="moneda">
            <column name="id" valueComputed="nextval('moneda_id_seq')"/>
            <column name="codigo" value="PYG"/>
            <column name="nombre" value="Guarani"/>
            <column name="descripcion" value="Moneda Guarani"/>

            <!-- BaseModel -->
            <column name="is_deleted" valueBoolean="false"/>
            <column name="createdat" valueDate="NOW()"/>
            <column name="updatedat" valueDate="NOW()"/>
            <column name="createdby" valueNumeric="null"/>
            <column name="updatedby" valueNumeric="null"/>

            <!-- ConstantModel -->
            <column name="activo" valueBoolean="true"/>
        <column name="simbolo" value=""/>

        </insert>
        <rollback>
            <delete tableName="moneda">
                <where>codigo = 'PYG'</where>
            </delete>
        </rollback>
    </changeSet>

