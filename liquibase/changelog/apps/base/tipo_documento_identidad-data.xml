    <changeSet id="tipo_documento_identidad-ci" author="orco">
        <insert tableName="tipo_documento_identidad">
            <column name="id" valueComputed="nextval('tipo_documento_identidad_id_seq')"/>
            <column name="codigo" value="CI"/>
            <column name="nombre" value="Cedula"/>
            <column name="descripcion" value="TipoDocumentoIdentidad Cedula"/>

            <!-- BaseModel -->
            <column name="is_deleted" valueBoolean="false"/>
            <column name="createdat" valueDate="NOW()"/>
            <column name="updatedat" valueDate="NOW()"/>
            <column name="createdby" valueNumeric="null"/>
            <column name="updatedby" valueNumeric="null"/>

            <!-- ConstantModel -->
            <column name="activo" valueBoolean="true"/>

        </insert>
        <rollback>
            <delete tableName="tipo_documento_identidad">
                <where>codigo = 'CI'</where>
            </delete>
        </rollback>
    </changeSet>

