    <changeSet id="estado_salida-planificada" author="orco">
        <insert tableName="estado_salida">
            <column name="id" valueComputed="nextval('estado_salida_id_seq')"/>
            <column name="codigo" value="Planificada"/>
            <column name="nombre" value="Planificada"/>
            <column name="descripcion" value="EstadoSalida Planificada"/>

            <!-- BaseModel -->
            <column name="is_deleted" valueBoolean="false"/>
            <column name="createdat" valueDate="NOW()"/>
            <column name="updatedat" valueDate="NOW()"/>
            <column name="createdby" valueNumeric="null"/>
            <column name="updatedby" valueNumeric="null"/>

            <!-- ConstantModel -->
            <column name="activo" valueBoolean="true"/>

        </insert>
        <rollback>
            <delete tableName="estado_salida">
                <where>codigo = 'Planificada'</where>
            </delete>
        </rollback>
    </changeSet>

