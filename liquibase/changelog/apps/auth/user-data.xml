<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="
        http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.23.xsd">

    <changeSet
        id="auth-002-bootstrap-superuser"
        author="esteban"
        context="bootstrap">

        <insert tableName="auth_user">

            <!-- Identidad -->
            <column name="username" value="esteban"/>
            <column name="email" value="serafa999@gmail.com"/>

            <!-- Autenticación -->
            <column
                name="password"
                value="pbkdf2_sha256$1200000$IXkJMXbleuwJTozKLZMFuK$+NsOKcrCU6LcXm4f1TZL2ruIIxmsm2UNDvs+XRyvECA="/>

            <!-- Flags -->
            <column name="is_superuser" valueBoolean="true"/>
            <column name="is_staff" valueBoolean="true"/>
            <column name="is_active" valueBoolean="true"/>

            <!-- Fechas -->
            <column name="date_joined" valueComputed="NOW()"/>

            <!-- BaseModel -->
            <column name="is_deleted" valueBoolean="false"/>
            <column name="createdat" valueComputed="NOW()"/>
            <column name="updatedat" valueComputed="NOW()"/>

            <!-- Auditoría (bootstrap → NULL) -->
            <column name="createdby_id" valueNumeric="NULL"/>
            <column name="updatedby_id" valueNumeric="NULL"/>

        </insert>

    </changeSet>

</databaseChangeLog>
