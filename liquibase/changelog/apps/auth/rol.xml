<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">
<changeSet id="create-rol" author="orco">
    <createSequence sequenceName="rol_id_seq" startValue="1" />
    <createTable tableName="rol">
        <column name="id" type="int">
            <constraints primaryKey="true" nullable="false"/>
        </column>
        <column name="is_deleted" type="boolean">
            <constraints nullable="false"/>
        </column>
        <column name="createdby" type="varchar(255)">
        </column>
        <column name="updatedby" type="varchar(255)">
        </column>
        <column name="createdat" type="timestamp">
        </column>
        <column name="updatedat" type="timestamp">
        </column>
        <column name="nombre" type="varchar(200)">
            <constraints nullable="false"/>
        </column>
        <column name="descripcion" type="text">
        </column>
        <column name="codigo" type="varchar(50)">
            <constraints nullable="false" unique="true"/>
        </column>
        <column name="activo" type="boolean">
            <constraints nullable="false"/>
        </column>
    </createTable>
    <addDefaultValue tableName="rol" columnName="id" defaultValueComputed="nextval('rol_id_seq')" />
</changeSet>
</databaseChangeLog>
