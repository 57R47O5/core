<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="
        http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.23.xsd">
<changeSet id="rol-seed" author="orco">
    <!-- OWNER -->
    <insert tableName="rol">
        <column name="code" value="owner"/>
        <column name="name" value="Owner"/>
        <column name="description" value="Propietario de la cuenta con control total del sistema"/>
        <column name="is_system" valueBoolean="true"/>
        <column name="is_active" valueBoolean="true"/>
        <column name="created_at" valueComputed="NOW()"/>
        <column name="updated_at" valueComputed="NOW()"/>
    </insert>

    <!-- ADMIN -->
    <insert tableName="rol">
        <column name="code" value="admin"/>
        <column name="name" value="Administrador"/>
        <column name="description" value="Administrador del sistema y de los usuarios"/>
        <column name="is_system" valueBoolean="true"/>
        <column name="is_active" valueBoolean="true"/>
        <column name="created_at" valueComputed="NOW()"/>
        <column name="updated_at" valueComputed="NOW()"/>
    </insert>

    <!-- USER -->
    <insert tableName="rol">
        <column name="code" value="user"/>
        <column name="name" value="Usuario"/>
        <column name="description" value="Usuario estÃ¡ndar del sistema"/>
        <column name="is_system" valueBoolean="true"/>
        <column name="is_active" valueBoolean="true"/>
        <column name="created_at" valueComputed="NOW()"/>
        <column name="updated_at" valueComputed="NOW()"/>
    </insert>

    <!-- READONLY -->
    <insert tableName="rol">
        <column name="code" value="readonly"/>
        <column name="name" value="Solo lectura"/>
        <column name="description" value="Usuario con permisos de solo lectura"/>
        <column name="is_system" valueBoolean="true"/>
        <column name="is_active" valueBoolean="true"/>
        <column name="created_at" valueComputed="NOW()"/>
        <column name="updated_at" valueComputed="NOW()"/>
    </insert>
</changeSet>
</databaseChangeLog>