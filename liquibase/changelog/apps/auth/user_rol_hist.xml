<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="
        http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.23.xsd">

    <!-- ===================================================== -->
    <!-- Tabla: user_rol_hist -->
    <!-- ===================================================== -->

    <changeSet id="user-rol-history-001-create-table" author="system">
        <createTable tableName="user_rol_history">

            <column name="history_id" type="SERIAL">
                <constraints primaryKey="true" nullable="false"/>
            </column>

            <!-- ID del registro original -->
            <column name="id" type="INTEGER"/>

            <column name="user_id" type="INTEGER"/>
            <column name="rol_id" type="INTEGER"/>

            <column name="is_deleted" type="BOOLEAN"/>

            <column name="createdby_id" type="INTEGER"/>
            <column name="updatedby_id" type="INTEGER"/>

            <column name="createdat" type="TIMESTAMP"/>
            <column name="updatedat" type="TIMESTAMP"/>

            <!-- Campos de auditoría -->
            <column name="history_date" type="TIMESTAMP">
                <constraints nullable="false"/>
            </column>

            <column name="history_type" type="CHAR(1)">
                <constraints nullable="false"/>
            </column>

            <column name="history_user_id" type="INTEGER"/>
        </createTable>
    </changeSet>

    <!-- ===================================================== -->
    <!-- Índices útiles -->
    <!-- ===================================================== -->

    <changeSet id="user-rol-history-002-index-id" author="system">
        <createIndex indexName="idx_user_rol_hist_id" tableName="user_rol_history">
            <column name="id"/>
        </createIndex>
    </changeSet>

    <changeSet id="user-rol-history-003-index-history-date" author="system">
        <createIndex indexName="idx_user_rol_hist_date" tableName="user_rol_history">
            <column name="history_date"/>
        </createIndex>
    </changeSet>

</databaseChangeLog>
